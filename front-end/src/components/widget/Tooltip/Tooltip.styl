.crm-tooltip-wrapper
  position fixed
  top 0
  left 0
  z-index 99999
  display table
  width 100%
  height 100%
  background-color rgba(0,0,0,0)

  & > .crm-tooltip-inner
    display table-cell
    vertical-align middle

    & .crm-tooltip-box
      display table
      width 300px
      height 100px
      margin 0 auto
      border 5px solid rgba(0,0,0,.2)
      border-radius 10px
      background-color #fff

      &.crm-tooltip-success
        & i
          background-image embedurl('./success.png')
      &.crm-tooltip-failed
        & i
          background-image embedurl('./failed.png')
      &.crm-tooltip-normal
        & i
          display none !important

      & > .crm-tooltip-box-inner
        display table-cell
        padding 0 10px
        text-align center
        vertical-align middle
        & > i
          display inline-block
          width 30px
          height 30px
          margin-right 16px
          background-repeat no-repeat
          background-size cover
          background-position center
          vertical-align middle
