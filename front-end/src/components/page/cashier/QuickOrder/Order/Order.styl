.crm-order-page
  position relative
  height calc(100% - 35px)

  .crm-table-cell
    position relative

    input
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      border none
      outline none
      text-align center

  & .crm-input
    input
      width 100%

  & > .left
    position relative
    display inline-block
    width 60%
    height 100%
    vertical-align middle

    .crm-indicator
      position absolute

    header
      padding 10px
      table
        margin-top 10px
        border-collapse collapse

        td
          padding 5px
          border 1px solid #ddd

          input
            width 100%
            border none
            outline none

          &:nth-of-type(2n+1)
            width 62px
            background-color #fafafa
            font-size 13px
            text-align center

    footer
      padding 10px

      & > div
        margin-top 10px
        text-align right

        &:nth-of-type(3)
          padding-top 20px
          text-align right

          .crm-button
            margin-right 5px

      .crm-input
        margin-right 5px

    & > .inner
      margin 10px
      border 1px solid #ddd

      .crm-table
        margin 10px

  & > .right
    position relative
    display inline-block
    width 40%
    height 100%
    vertical-align middle

    .crm-indicator
      position absolute

    & > .inner
      margin 10px
      border 1px solid #ddd

      .crm-table
        margin 10px

      header
        position relative
        padding 10px

        & > .crm-input
          margin-right 10px

        & > .group
          position absolute
          top 50%
          right 10px
          margin-top -17px
