.crm-department-page
  padding 10px

  .list
    display inline-block
    width 40%
    vertical-align top

    & > div
      position relative
      padding-right 10px

      & .crm-indicator
        position absolute

  .right
    display inline-block
    width 60%
    vertical-align top

    footer
      border-left 1px solid #ddd
      border-right 1px solid #ddd
      border-bottom 1px solid #ddd
      padding 20px 0
      text-align center

    & > div
      position relative
      padding-left 10px

      & .crm-indicator
        position absolute

      header
        padding 10px
        border-top 1px solid #ddd
        border-left 1px solid #ddd
        border-right 1px solid #ddd

    & .right-item
      h3
        margin-top 0
        margin-left 0
        margin-right 0
        margin-bottom 10px
        padding 0
        text-align left
        font-size 16px
      ul
       margin 0
       padding 0
       text-align left
       white-space normal

       li
        display inline-block
        margin-right 20px
        margin-bottom 10px
        text-align left
        vertical-align middle

        .checkbox
          margin-right 5px

  .crm-table-cell
    background-color #fff
