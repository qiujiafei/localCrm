.crm-wrapper
  position absolute
  top 0
  left 0
  z-index 999
  width 100%
  height 100%
  min-width 1200px
  min-height 800px

  & > .crm-mask
    position absolute
    top 0
    left 0
    z-index 999
    display none
    width 100%
    height 100%
    opacity 0

    &.crm-mask-show
      display block

  & .crm-progress
    position absolute
    top 0
    left 0
    z-index 999
    display none
    width 100%
    height 3px
    &.crm-progress-show
      display block
    &.crm-progress-primary-color
      background-color lightness(#26b99a, 90%)
    & .crm-progress-primary-color-bar
      background-color #26b99a
