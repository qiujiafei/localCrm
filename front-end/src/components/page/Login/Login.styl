.crm-login
  position absolute
  width 100%
  height 100%
  background-color #2f3b43
  font-family 'microsoft yahei'

  & > .crm-login-mask
    position absolute
    top 0
    left 0
    z-index 999
    display none
    width 100%
    height 100%
    opacity 0

    &.crm-login-mask-show
      display block

  & .crm-progress
    position absolute
    top 0
    left 0
    z-index 999
    display none
    width 100%
    height 3px
    &.crm-progress-show
      display block
    &.crm-progress-primary-color
      background-color lightness(#26b99a, 90%)
    & .crm-progress-primary-color-bar
      background-color #26b99a

  & > footer
    position absolute
    bottom 0
    width 100%
    font-size 14px
    color #fff
    text-align center

    & > p > span
      display inline-block
      margin 0 10px

      & > a
        color #fff
        text-decoration none

        &:hover
          text-decoration underline

  .crm-login-form
    width 480px
    margin 0 auto
    margin-top 90px

    & > header
      margin-bottom 50px
      text-align center
      color #fff
      font-size 36px

      & > .crm-logo
        display inline-block
        width 479px
        height 90px
        background-image embedurl('./logo.png')
        background-size cover
        background-repeat no-repeat
        background-position center
        vertical-align middle

      & > span
        display inline-block
        vertical-align middle

    & > .crm-login-input
      width 100%
      padding 20px 10px
      background-color #fff
      box-sizing border-box

      &:nth-of-type(1)
        margin-bottom 1px
        border-top-left-radius 6px
        border-top-right-radius 6px
      &:nth-of-type(2)
        border-bottom-left-radius 6px
        border-bottom-right-radius 6px

      & > input
        width 100%
        border none
        outline none

    & > footer
      width 100%

      & > .crm-login-submit-button
        width 100%
        margin-top 30px
        padding 20px 0
        background-color #26b99a
        color #fff
        border none
        outline none
        border-radius 6px
        cursor pointer
