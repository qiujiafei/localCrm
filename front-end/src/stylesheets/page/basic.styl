.crm-basic-page
  position relative

  & > header
    position relative
    height 50px
    padding 10px

    & > .search-wrapper
      position absolute
      top 50%
      right 10px
      margin-top -18px

      & > .crm-button
        vertical-align middle

      & > div
        display inline-block
        vertical-align middle

        & > .crm-input
          margin-right 5px
          vertical-align middle

        & > .crm-datetime-group
          margin-right 5px

        & .group
          margin-right 5px
          & .crm-input
            margin-left -1px
            margin-right 0

        & .field-wrapper
          display inline-block
          height 34px
          margin-right 5px
          vertical-align top
          background-color #fff

          & > label
            display inline-block
            height 100%
            padding 0 10px
            line-height 34px
            background-color #fafafa
            outline none
            border 1px solid #ddd
            vertical-align middle
            font-size 13px

          & > div
            display inline-block
            height 34px
            line-height 34px
            margin-left -1px
            vertical-align middle
            border 1px solid #ddd

            &.input-field
              padding 0 5px

            input
              border none
              outline none
              font-size 13px

            & > .crm-dpl
              border none

              .list
                line-height normal

  & > .body
    padding 10px
