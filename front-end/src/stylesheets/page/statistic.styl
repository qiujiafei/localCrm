.crm-statistic-page
  text-align center

  & > header
    position relative
    height 50px
    padding 10px

    .search-wrapper
      position absolute
      top 50%
      right 0
      margin-top -17px
      padding 0 10px

      & > div
        display inline-block
        margin-right 5px
        vertical-align middle

        & > .crm-radio-button-group
          margin-right 5px

  & > .mask
    position fixed
    top 0
    left 0
    z-index 1
    width 100%
    height 100%
    opacity 0

  table
    background-color #1e88e5
    width 1000px
    height 200px
    margin-top 140px
    margin-left auto
    margin-right auto
    table-layout fixed

    td
      text-align center
      position relative

      &:nth-child(1)
        &:after
          content ''
          width 1px
          height 50px
          background-color #fff
          position absolute
          top 75px
          right 0

      &:nth-child(2)
        &:after
          content ''
          width 1px
          height 50px
          background-color #fff
          position absolute
          top 75px
          right 0
      &:last-child
        &:after
          content: ''
          width: 0
      span
        font-size 48px
        color #fff
        word-break break-all
      p
        font-size 14px
        color #fff
