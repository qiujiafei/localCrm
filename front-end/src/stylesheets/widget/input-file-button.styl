.crm-input-file-button
  display inline-block

  .crm-button
    width auto
    height auto
    font-size 13px
    vertical-align middle

  & > div:nth-of-type(1)
    position relative
    display inline-block
    margin-right 5px
    vertical-align middle
    overflow hidden

    & > input[type="file"]
      position absolute
      top 0
      left 0
      display none
      width 100%
      height 100%
      cursor pointer
