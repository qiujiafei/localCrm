.crm-table
  color #333

  *
    font-size 13px

  & .rt-thead
    box-shadow none !important
    border-bottom 1px solid #ddd
    font-weight bold

    & .rt-th
      line-height 22px
      padding-top 7px
      padding-bottom 7px

  & .rt-tfoot
    box-shadow none !important
    border-top 1px solid #ddd

  & .rt-tr-group
    border-bottom-style dashed !important
    border-bottom-color #ddd !important

  & .crm-table-header
  & .crm-table-cell
    text-align center
    border-right-style dashed !important
    border-right-color #ddd !important

    & > div[title]
      width 100%
      height 100%
      line-height 22px
      white-space nowrap
      overflow hidden
      text-overflow ellipsis
