button-size(buttonWidth, buttonHeight)
  width buttonWidth
  height buttonHeight

button-color(fontColor, borderColor, backgroundColor)
  color fontColor
  border-color borderColor
  background-color backgroundColor

.crm-button
  border-width 1px
  border-style solid
  border-radius 3px
  font-size 13px
  outline none
  cursor pointer

  &.button-normal
    button-color(rgb(51,51,51), rgb(204,204,204), rgb(255,255,255))
  &:hover.button-normal
    button-color(rgb(51,51,51), rgb(173,173,173), rgb(230,230,230))
  &:active.button-normal
    button-color(rgb(51,51,51), rgb(140,140,140), rgb(212,212,212))

  &.button-primary
    button-color(rgb(255,255,255), rgb(46,109,164), rgb(51,122,183))
  &:hover.button-primary
    button-color(rgb(255,255,255), rgb(32,77,116), rgb(40,96,144))
  &:active.button-primary
    button-color(rgb(255,255,255), rgb(18,43,64), rgb(32, 77, 116))

  &.button-secondary
    button-color(rgb(255,255,255), rgb(22,159,133), rgb(38,185,154))
  &:hover.button-secondary
    button-color(rgb(255,255,255), rgb(7,129,87), rgb(22,159,133))
  &:active.button-secondary
    button-color(rgb(255,255,255), rgb(37,86,37), rgb(7, 129, 87))

  &.button-warning
    button-color(rgb(255,255,255), rgb(238,162,54), rgb(240,173,78))
  &:hover.button-warning
    button-color(rgb(255,255,255), rgb(213,133,18), rgb(236,151,31))
  &:active.button-warning
    button-color(rgb(255,255,255), rgb(180,106,10), rgb(213,133,18))

  &.button-error
    button-color(rgb(255,255,255), rgb(212,63,58), rgb(217,83,79))
  &:hover.button-error
    button-color(rgb(255,255,255), rgb(172,41,37), rgb(212,63,58))
  &:active.button-error
    button-color(rgb(255,255,255), rgb(118,28,25), rgb(172,41,37))

  &.button-assist
    button-color(rgb(255,255,255), rgb(54,75,95), rgb(75,95,113))
  &:hover.button-assist
    button-color(rgb(255,255,255), rgb(57,77,95), rgb(54,75,95))
  &:active.button-assist
    button-color(rgb(255,255,255), rgb(57,77,95), rgb(57,77,95))

  &.button-link
    button-color(rgb(51,122,183), transparent, transparent)
    &:hover
      button-color(rgb(53,82,124), transparent, transparent)
      text-decoration underline
    &:active
      button-color(rgb(35,82,124), transparent, transparent)
      text-decoration underline

  &.button-link-gray
    button-color(rgb(142,142,142), transparent, transparent)
    &:hover
      button-color(rgb(100,100,100), transparent, transparent)
      text-decoration underline
    &:active
      button-color(rgb(80,80,80), transparent, transparent)
      text-decoration underline

  &[disabled]
    &.button-normal
    &:hover.button-normal
    &:active.button-normal

    &.button-primary
    &:hover.button-primary
    &:active.button-primary

    &.button-secondary
    &:hover.button-secondary
    &:active.button-secondary

    &.button-warning
    &:hover.button-warning
    &:active.button-warning

    &.button-error
    &:hover.button-error
    &:active.button-error

    &.button-assist
    &:hover.button-assist
    &:active.button-assist

    &.button-link
    &:hover.button-link
    &:active.button-link
      button-color(rgb(177,177,177), rgb(230,230,230), rgb(253,253,253))
      cursor not-allowed

  &.button-large
    button-size(74px, 34px)
  &.button-middle
    button-size(56px, 26px)
  &.button-small
    button-size(44px, 22px)
