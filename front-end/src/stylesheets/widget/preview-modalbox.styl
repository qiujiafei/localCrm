.crm-preview-modalbox
  position fixed
  top 0
  left 0
  z-index 13
  display table
  width 100%
  height 100%
  background-color rgba(0,0,0,.5)

  & > .inner
    display table-cell
    vertical-align middle

    & > .box
      position relative
      margin 0 auto
      background-color #fff

      & > div
        padding 10px
        overflow auto
        img
          width 100%
          height auto
          vertical-align middle

      & > header
        position relative
        height 50px
        line-height 50px
        background-color #eee

        span
          padding-left 15px
          font-size 16px

        & > .crm-icon-close
          position absolute
          top 50%
          right 15px
          width 14px
          height 14px
          margin-top -7px
          border none
          background-color transparent
          cursor pointer
          outline none
