.crm-uncontrolled-modalbox
  position fixed
  top 0
  left 0
  z-index 12
  display table
  width 100%
  height 100%
  background-color rgba(0,0,0,.5)

  & > .inner
    display table-cell
    vertical-align middle

    & > .box
      display block
      margin 0 auto
      background-color #fff

      & > header
        position relative
        height 50px
        line-height 50px
        background-color #eee

        span
          padding-left 10px

        .crm-icon-close
          position absolute
          top 50%
          right 10px
          margin-top -10px
          border none
          background-color transparent
          cursor pointer
          outline none

      & > .content
        padding 10px

        ul
          margin 10px 0
          padding 0
          list-style none
          line-height 1.5
          font-size 14px
          text-align center
