.crm-radio
  position relative
  display inline-block
  width 18px
  height 18px
  background-size cover
  background-repeat no-repeat
  background-position center
  vertical-align middle

  & > input
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    opacity 0

  &.unselected
    background-image embedurl('../../images/icon/unselected.png')

  &.selected
    background-image embedurl('../../images/icon/selected.png')
